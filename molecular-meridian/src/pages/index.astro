    <script is:inline>
      const FORM_ENDPOINT = "{FORM_ENDPOINT}";
      const MEETING_URL = "{MEETING_URL}";

      const langButtons = document.querySelectorAll("[data-lang]");
      const i18nBlocks = Array.from(document.querySelectorAll("[data-i18n]"));

      const cacheDisplay = () => {
        i18nBlocks.forEach((el) => {
          if (!el.dataset.display) {
            const d = getComputedStyle(el).display;
            el.dataset.display = (d && d !== "none") ? d : "block";
          }
        });
      };

      const setLang = (lang) => {
        try { localStorage.setItem("rapdm_lang", lang); } catch {}
        langButtons.forEach((b) => b.setAttribute("aria-pressed", b.dataset.lang === lang ? "true" : "false"));
        i18nBlocks.forEach((el) => {
          el.style.display = (el.dataset.i18n === lang) ? (el.dataset.display || "block") : "none";
        });
        document.documentElement.lang = (lang === "pt") ? "pt-PT" : "en";
      };

      cacheDisplay();
      const saved = (() => { try { return localStorage.getItem("rapdm_lang"); } catch { return null; } })() || "pt";
      setLang(saved);
      langButtons.forEach((b) => b.addEventListener("click", () => setLang(b.dataset.lang)));

      const io = new IntersectionObserver(
        (entries) => entries.forEach((e) => e.isIntersecting && e.target.classList.add("revealed")),
        { threshold: 0.12 }
      );
      document.querySelectorAll("[data-reveal]").forEach((el) => io.observe(el));

      const ring = document.getElementById("cursorRing");
      const canHover = window.matchMedia && window.matchMedia("(pointer:fine)").matches;
      if (ring && canHover) {
        let x = 0, y = 0, tx = 0, ty = 0;
        const tick = () => {
          x += (tx - x) * 0.22;
          y += (ty - y) * 0.22;
          ring.style.left = x + "px";
          ring.style.top = y + "px";
          requestAnimationFrame(tick);
        };
        window.addEventListener("mousemove", (e) => { tx = e.clientX; ty = e.clientY; }, { passive: true });
        tick();

        const hoverables = document.querySelectorAll("[data-hover], .card");
        hoverables.forEach((el) => {
          el.addEventListener("mouseenter", () => { ring.style.opacity = "1"; ring.classList.add("active"); });
          el.addEventListener("mouseleave", () => { ring.style.opacity = "0"; ring.classList.remove("active"); });
        });
      } else if (ring) {
        ring.style.display = "none";
      }

      const prefillFromCareers = () => {
        const cards = document.querySelectorAll("[data-role]");
        const setRolePT = (role) => {
          const category = document.getElementById("category");
          const roleEl = document.getElementById("role");
          const msg = document.getElementById("message");
          if (category) category.value = "Careers";
          if (roleEl) roleEl.value = role;
          if (msg && !msg.value) msg.value = "Candidatura para: " + role + ".";
          document.getElementById("contact")?.scrollIntoView({ behavior: "smooth", block: "start" });
        };
        const setRoleEN = (role) => {
          const category = document.getElementById("category_en");
          const roleEl = document.getElementById("role_en");
          const msg = document.getElementById("message_en");
          if (category) category.value = "Careers";
          if (roleEl) roleEl.value = role;
          if (msg && !msg.value) msg.value = "Application for: " + role + ".";
          document.getElementById("contact-en")?.scrollIntoView({ behavior: "smooth", block: "start" });
        };

        cards.forEach((c) => {
          c.addEventListener("click", () => {
            const role = c.getAttribute("data-role") || "";
            const current = (() => { try { return localStorage.getItem("rapdm_lang"); } catch { return "pt"; } })() || "pt";
            if (current === "en") setRoleEN(role);
            else setRolePT(role);
          });
        });
      };
      prefillFromCareers();

      const postForm = async (payload) => {
        const res = await fetch(FORM_ENDPOINT, {
          method: "POST",
          headers: { "Accept": "application/json", "Content-Type": "application/json" },
          body: JSON.stringify(payload)
        });
        if (!res.ok) throw new Error("Request failed");
        return true;
      };

      const hookForm = (formId, statusId, fields) => {
        const form = document.getElementById(formId);
        const status = document.getElementById(statusId);
        if (!form || !status) return;

        form.addEventListener("submit", async (e) => {
          e.preventDefault();

          if (!FORM_ENDPOINT || FORM_ENDPOINT.includes("REPLACE_ME")) {
            status.className = "status err";
            status.textContent = "Form endpoint not configured.";
            return;
          }

          status.className = "status";
          status.textContent = "Sending...";

          const data = {};
          fields.forEach((id) => {
            const el = document.getElementById(id);
            data[id] = el ? el.value : "";
          });

          const payload = {
            source: "rapdm.co",
            page: window.location.href,
            name: data[fields[0]] || "",
            email: data[fields[1]] || "",
            category: data[fields[2]] || "",
            company: data[fields[3]] || "",
            role: data[fields[4]] || "",
            link: data[fields[5]] || "",
            message: data[fields[6]] || ""
          };

          try {
            await postForm(payload);
            status.className = "status ok";
            status.textContent = "Sent.";
            form.reset();
          } catch {
            status.className = "status err";
            status.textContent = "Failed. Try again.";
          }
        });
      };

      hookForm("contactForm", "formStatus", ["name","email","category","company","role","link","message"]);
      hookForm("contactFormEn", "formStatusEn", ["name_en","email_en","category_en","company_en","role_en","link_en","message_en"]);

      const y = String(new Date().getFullYear());
      const y1 = document.getElementById("year");
      const y2 = document.getElementById("year2");
      if (y1) y1.textContent = y;
      if (y2) y2.textContent = y;
    </script>
  </body>
