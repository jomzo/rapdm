<!doctype html>
<html lang="pt">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="RAPDM: holding, venture studio, and investments." />
    <meta name="theme-color" content="#0B5CFF" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href="/rapdm-logo.png" />

    <title>{copy.pt.meta.title}</title>

    <style>
      :root{
        --bg: #f6f8ff;
        --card: rgba(255,255,255,.72);
        --card2: rgba(255,255,255,.86);
        --text: #0b1220;
        --muted: rgba(11,18,32,.62);
        --line: rgba(11,18,32,.10);
        --shadow: 0 10px 30px rgba(15,23,42,.10);
        --shadow2: 0 18px 60px rgba(15,23,42,.14);
        --blue: #0B5CFF;
        --blue2:#57A4FF;
        --violet:#7A5CFF;
        --radius: 18px;
        --radius2: 26px;
        --max: 1120px;
      }

      *{ box-sizing: border-box; }
      html,body{ height:100%; }
      body{
        margin:0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Inter, Arial, "Apple Color Emoji","Segoe UI Emoji";
        color: var(--text);
        background: var(--bg);
        overflow-x:hidden;
      }

      /* Background: animated mesh + grid */
      .bg{
        position: fixed;
        inset: 0;
        pointer-events:none;
        z-index: 0;
      }
      .mesh{
        position:absolute;
        inset:-20%;
        background:
          radial-gradient(900px 700px at 18% 18%, rgba(11,92,255,.18), transparent 60%),
          radial-gradient(900px 700px at 88% 16%, rgba(122,92,255,.18), transparent 60%),
          radial-gradient(900px 700px at 70% 78%, rgba(87,164,255,.14), transparent 60%),
          radial-gradient(800px 650px at 22% 85%, rgba(11,92,255,.10), transparent 60%),
          radial-gradient(900px 900px at 50% 50%, rgba(255,255,255,.6), transparent 62%);
        filter: blur(10px);
        transform: translate3d(0,0,0);
        animation: drift 14s ease-in-out infinite;
      }
      @keyframes drift{
        0% { transform: translate3d(0,0,0) scale(1); }
        50% { transform: translate3d(2.5%, -1.5%, 0) scale(1.03); }
        100% { transform: translate3d(0,0,0) scale(1); }
      }
      .grid{
        position:absolute;
        inset:0;
        background-image:
          linear-gradient(to right, rgba(11,18,32,.06) 1px, transparent 1px),
          linear-gradient(to bottom, rgba(11,18,32,.06) 1px, transparent 1px);
        background-size: 64px 64px;
        opacity:.45;
        mask-image: radial-gradient(60% 55% at 50% 25%, rgba(0,0,0,1), transparent 70%);
      }
      .topGlow{
        position:absolute;
        top:-240px;
        left:50%;
        width:1100px;
        height:520px;
        transform: translateX(-50%);
        background:
          radial-gradient(closest-side, rgba(11,92,255,.22), transparent 70%),
          radial-gradient(closest-side, rgba(122,92,255,.16), transparent 72%);
        filter: blur(22px);
        opacity:.9;
        animation: pulse 7s ease-in-out infinite;
      }
      @keyframes pulse{
        0%,100%{ transform: translateX(-50%) scale(1); opacity:.85; }
        50%{ transform: translateX(-50%) scale(1.06); opacity:1; }
      }

      /* Cursor glow */
      .cursorGlow{
        position: fixed;
        width: 520px;
        height: 520px;
        border-radius: 999px;
        pointer-events:none;
        z-index: 3;
        background: radial-gradient(circle at center, rgba(11,92,255,.16), rgba(122,92,255,.10), transparent 60%);
        filter: blur(18px);
        transform: translate(-50%,-50%);
        opacity:.0;
        transition: opacity .2s ease;
      }
      @media (hover: none){
        .cursorGlow{ display:none; }
      }

      /* Layout */
      .wrap{
        position: relative;
        z-index: 1;
        min-height:100%;
      }
      .container{
        width: min(var(--max), calc(100% - 48px));
        margin: 0 auto;
      }

      header{
        position: sticky;
        top: 0;
        z-index: 10;
        backdrop-filter: blur(14px);
        background: rgba(246,248,255,.72);
        border-bottom: 1px solid rgba(11,18,32,.06);
      }
      .nav{
        display:flex;
        align-items:center;
        justify-content:space-between;
        height: 72px;
        gap: 14px;
      }
      .brand{
        display:flex;
        align-items:center;
        gap: 12px;
        text-decoration:none;
        color: inherit;
      }
      .brand img{
        height: 26px;
        width: auto;
        display:block;
        filter: drop-shadow(0 10px 20px rgba(15,23,42,.10));
      }
      .brand span{
        font-weight: 700;
        letter-spacing: .12em;
        font-size: 12px;
        opacity: .88;
      }

      .navLinks{
        display:flex;
        gap: 18px;
        align-items:center;
      }
      .navLinks a{
        text-decoration:none;
        color: rgba(11,18,32,.74);
        font-size: 13px;
        padding: 10px 10px;
        border-radius: 999px;
        transition: background .2s ease, color .2s ease, transform .2s ease;
      }
      .navLinks a:hover{
        background: rgba(11,92,255,.08);
        color: rgba(11,18,32,.92);
        transform: translateY(-1px);
      }

      .right{
        display:flex;
        align-items:center;
        gap: 10px;
      }
      .lang{
        display:flex;
        align-items:center;
        border: 1px solid rgba(11,18,32,.10);
        border-radius: 999px;
        overflow:hidden;
        background: rgba(255,255,255,.62);
      }
      .lang button{
        border:0;
        background:transparent;
        padding: 10px 12px;
        font-size: 12px;
        cursor:pointer;
        color: rgba(11,18,32,.70);
        transition: background .2s ease, color .2s ease;
      }
      .lang button.active{
        background: rgba(11,92,255,.10);
        color: rgba(11,92,255,1);
        font-weight: 700;
      }

      main{ padding: 46px 0 92px; }

      .hero{
        padding: 44px 0 10px;
      }
      .kicker{
        display:inline-flex;
        align-items:center;
        gap: 10px;
        padding: 8px 12px;
        border: 1px solid rgba(11,18,32,.10);
        background: rgba(255,255,255,.62);
        border-radius: 999px;
        font-size: 12px;
        color: rgba(11,18,32,.74);
        box-shadow: var(--shadow);
      }
      .dot{
        width: 8px; height: 8px; border-radius: 99px;
        background: linear-gradient(180deg, var(--blue), var(--violet));
        box-shadow: 0 10px 24px rgba(11,92,255,.22);
      }

      h1{
        margin: 18px 0 10px;
        font-size: clamp(34px, 5.4vw, 62px);
        line-height: 1.02;
        letter-spacing: -0.03em;
      }
      h1 .soft{
        color: rgba(11,18,32,.70);
        font-weight: 600;
      }
      .sub{
        max-width: 820px;
        font-size: 16px;
        line-height: 1.6;
        color: var(--muted);
        margin: 0 0 18px;
      }

      .ctaRow{
        display:flex;
        flex-wrap:wrap;
        gap: 12px;
        margin-top: 18px;
        align-items:center;
      }
      .btn{
        display:inline-flex;
        align-items:center;
        gap: 10px;
        border-radius: 999px;
        padding: 12px 16px;
        font-size: 13px;
        text-decoration:none;
        cursor:pointer;
        border: 1px solid rgba(11,18,32,.10);
        background: rgba(255,255,255,.68);
        color: rgba(11,18,32,.86);
        box-shadow: var(--shadow);
        transition: transform .2s ease, box-shadow .2s ease, background .2s ease, border-color .2s ease;
      }
      .btn:hover{ transform: translateY(-2px); box-shadow: var(--shadow2); }
      .btn.primary{
        background: linear-gradient(180deg, rgba(11,92,255,.98), rgba(11,92,255,.82));
        border-color: rgba(11,92,255,.40);
        color: white;
      }
      .btn.primary:hover{
        background: linear-gradient(180deg, rgba(11,92,255,1), rgba(122,92,255,.92));
      }
      .btn .ic{
        width: 16px; height: 16px; display:inline-block;
      }

      .badges{
        display:flex;
        gap: 10px;
        flex-wrap:wrap;
        margin-top: 18px;
      }
      .badge{
        font-size: 12px;
        padding: 8px 10px;
        border-radius: 999px;
        border: 1px solid rgba(11,18,32,.10);
        background: rgba(255,255,255,.62);
        color: rgba(11,18,32,.72);
      }

      section{
        padding: 34px 0;
      }

      .sectionTitle{
        display:flex;
        align-items:baseline;
        justify-content:space-between;
        gap: 14px;
        margin-bottom: 14px;
      }
      .sectionTitle h2{
        margin:0;
        font-size: 18px;
        letter-spacing: -0.02em;
      }
      .sectionTitle p{
        margin:0;
        color: var(--muted);
        font-size: 13px;
      }

      .grid3{
        display:grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 14px;
      }
      .grid2{
        display:grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 14px;
      }
      @media (max-width: 920px){
        .navLinks{ display:none; }
        .grid3{ grid-template-columns: 1fr; }
        .grid2{ grid-template-columns: 1fr; }
        main{ padding-top: 26px; }
      }

      .card{
        border: 1px solid rgba(11,18,32,.10);
        background: rgba(255,255,255,.68);
        border-radius: var(--radius2);
        padding: 18px;
        box-shadow: var(--shadow);
        position: relative;
        overflow:hidden;
        transition: transform .25s ease, box-shadow .25s ease, border-color .25s ease;
      }
      .card:hover{
        transform: translateY(-3px);
        box-shadow: var(--shadow2);
        border-color: rgba(11,92,255,.22);
      }
      .card::before{
        content:"";
        position:absolute;
        inset:-2px;
        background: radial-gradient(600px 180px at 30% 0%, rgba(11,92,255,.14), transparent 60%);
        opacity:.0;
        transition: opacity .25s ease;
        pointer-events:none;
      }
      .card:hover::before{ opacity: 1; }

      .cardTop{
        display:flex;
        align-items:center;
        gap: 12px;
        margin-bottom: 10px;
      }
      .iconPill{
        width: 38px;
        height: 38px;
        border-radius: 14px;
        background: linear-gradient(180deg, rgba(11,92,255,.14), rgba(122,92,255,.10));
        border: 1px solid rgba(11,92,255,.18);
        display:grid;
        place-items:center;
      }
      .iconPill svg{ width: 18px; height: 18px; }
      .card h3{
        margin:0;
        font-size: 14px;
        letter-spacing: -0.01em;
      }
      .card p{
        margin:0;
        color: var(--muted);
        font-size: 13px;
        line-height: 1.55;
      }

      .tags{
        display:flex;
        flex-wrap:wrap;
        gap: 10px;
        margin-top: 12px;
      }
      .tag{
        font-size: 12px;
        padding: 8px 10px;
        border-radius: 999px;
        border: 1px solid rgba(11,18,32,.10);
        background: rgba(255,255,255,.70);
        color: rgba(11,18,32,.70);
      }

      .list{
        display:flex;
        flex-direction:column;
        gap: 10px;
      }
      .listItem{
        display:flex;
        align-items:flex-start;
        gap: 12px;
        border: 1px solid rgba(11,18,32,.10);
        background: rgba(255,255,255,.70);
        border-radius: var(--radius);
        padding: 14px;
        box-shadow: var(--shadow);
        transition: transform .2s ease, box-shadow .2s ease;
      }
      .listItem:hover{ transform: translateY(-2px); box-shadow: var(--shadow2); }
      .bullet{
        width: 26px; height: 26px;
        border-radius: 10px;
        background: rgba(11,92,255,.10);
        border: 1px solid rgba(11,92,255,.18);
        display:grid; place-items:center;
        flex: 0 0 auto;
      }
      .bullet svg{ width: 14px; height: 14px; }

      .contactCard{
        display:flex;
        align-items:flex-start;
        justify-content:space-between;
        gap: 14px;
      }
      .contactRight{
        display:flex;
        gap: 10px;
        flex-wrap:wrap;
        align-items:center;
      }
      .mono{
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        font-size: 12px;
        padding: 10px 12px;
        border-radius: 999px;
        border: 1px solid rgba(11,18,32,.10);
        background: rgba(255,255,255,.68);
        color: rgba(11,18,32,.74);
      }

      footer{
        padding: 18px 0 0;
        color: rgba(11,18,32,.55);
        font-size: 12px;
      }

      /* Reveal animation */
      [data-reveal]{
        opacity: 0;
        transform: translateY(10px);
        transition: opacity .65s ease, transform .65s ease;
        will-change: opacity, transform;
      }
      [data-reveal].in{
        opacity: 1;
        transform: translateY(0);
      }

      /* Interactive hover cursor for clickable */
      a, button{ -webkit-tap-highlight-color: transparent; }
      .hoverable{ position: relative; }
      .hoverable::after{
        content:"";
        position:absolute;
        inset:-10px;
        border-radius: 999px;
        background: radial-gradient(260px 90px at 20% 10%, rgba(11,92,255,.12), transparent 60%);
        opacity: 0;
        transition: opacity .2s ease;
        pointer-events:none;
      }
      .hoverable:hover::after{ opacity: 1; }

      /* Small floating glyphs left */
      .rail{
        position: fixed;
        left: 18px;
        top: 160px;
        display:flex;
        flex-direction:column;
        gap: 16px;
        z-index: 2;
        opacity:.55;
      }
      .rail a{
        width: 34px;
        height: 34px;
        display:grid;
        place-items:center;
        border-radius: 14px;
        border: 1px solid rgba(11,18,32,.10);
        background: rgba(255,255,255,.58);
        text-decoration:none;
        color: rgba(11,18,32,.72);
        box-shadow: var(--shadow);
        transition: transform .2s ease, opacity .2s ease;
      }
      .rail a:hover{ transform: translateY(-2px); opacity: 1; }
      .rail svg{ width: 16px; height: 16px; }
      @media (max-width: 920px){
        .rail{ display:none; }
      }
    </style>
  </head>

  <body>
    <div class="bg" aria-hidden="true">
      <div class="mesh"></div>
      <div class="grid"></div>
      <div class="topGlow"></div>
    </div>
    <div class="cursorGlow" id="cursorGlow" aria-hidden="true"></div>

    <!-- Left rail -->
    <nav class="rail" aria-label="Quick">
      <a href="#work" title="Work">
        <svg viewBox="0 0 24 24" fill="none"><path d="M12 2v20M2 12h20" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/></svg>
      </a>
      <a href="#thesis" title="Thesis">
        <svg viewBox="0 0 24 24" fill="none"><path d="M12 3l2.4 6.2L21 12l-6.6 2.8L12 21l-2.4-6.2L3 12l6.6-2.8L12 3z" stroke="currentColor" stroke-width="1.6" stroke-linejoin="round"/></svg>
      </a>
      <a href="#ventures" title="Ventures">
        <svg viewBox="0 0 24 24" fill="none"><path d="M7 3h10v18H7V3z" stroke="currentColor" stroke-width="1.6"/><path d="M9 7h6M9 11h6M9 15h6" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/></svg>
      </a>
      <a href="#contact" title="Contact">
        <svg viewBox="0 0 24 24" fill="none"><path d="M20 6L9 17l-5-5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/></svg>
      </a>
    </nav>

    <div class="wrap">
      <header>
        <div class="container">
          <div class="nav">
            <a class="brand hoverable" href="#top">
              <img src="/rapdm-logo.png" alt="RAPDM" />
              <span id="brandText">RAPDM</span>
            </a>

            <div class="navLinks" id="navLinks">
              <a class="hoverable" href="#work" data-i18n="nav.work">{copy.pt.nav.work}</a>
