      langButtons.forEach((b) => b.addEventListener("click", () => setLang(b.dataset.lang)));

      // Reveal on scroll
      const io = new IntersectionObserver(
        (entries) => entries.forEach((e) => e.isIntersecting && e.target.classList.add("revealed")),
        { threshold: 0.12 }
      );
      document.querySelectorAll("[data-reveal]").forEach((el) => io.observe(el));

      // Minimal cursor ring (desktop only) + only on hoverable items
      const ring = document.getElementById("cursorRing");
      const canHover = window.matchMedia && window.matchMedia("(pointer:fine)").matches;

      if (ring && canHover) {
        let x = 0, y = 0, tx = 0, ty = 0;
        const tick = () => {
          x += (tx - x) * 0.22;
          y += (ty - y) * 0.22;
          ring.style.left = x + "px";
          ring.style.top = y + "px";
          requestAnimationFrame(tick);
        };
        window.addEventListener("mousemove", (e) => { tx = e.clientX; ty = e.clientY; }, { passive: true });
        tick();

        const hoverables = document.querySelectorAll("[data-hover]");
        hoverables.forEach((el) => {
          el.addEventListener("mouseenter", () => { ring.style.opacity = "1"; ring.classList.add("active"); });
          el.addEventListener("mouseleave", () => { ring.style.opacity = "0"; ring.classList.remove("active"); });
        });
      } else if (ring) {
        ring.style.display = "none";
      }

      // Apply forms -> mailto (no backend needed)
      const makeMailto = (payload) => {
        const subject = encodeURIComponent(payload.subject);
        const body = encodeURIComponent(payload.body);
        window.location.href = `mailto:${payload.to}?subject=${subject}&body=${body}`;
      };

      const applyForm = document.getElementById("applyForm");
      if (applyForm) {
        applyForm.addEventListener("submit", (e) => {
          e.preventDefault();
          const name = document.getElementById("name_pt").value.trim();
          const email = document.getElementById("email_pt").value.trim();
          const company = document.getElementById("company_pt").value.trim();
          const stage = document.getElementById("stage_pt").value.trim();
          const metrics = document.getElementById("metrics_pt").value.trim();
          const msg = document.getElementById("message_pt").value.trim();

          makeMailto({
            to: "hello@rapdm.co",
            subject: `Investment Application - ${company}`,
            body:
`Nome: ${name}
Email: ${email}
Empresa: ${company}
Stage: ${stage}
Métricas: ${metrics}

Resumo:
${msg}
`
          });
        });
      }

      const applyFormEn = document.getElementById("applyFormEn");
      if (applyFormEn) {
        applyFormEn.addEventListener("submit", (e) => {
          e.preventDefault();
          const name = document.getElementById("name_en").value.trim();
          const email = document.getElementById("email_en").value.trim();
          const company = document.getElementById("company_en").value.trim();
          const stage = document.getElementById("stage_en").value.trim();
          const metrics = document.getElementById("metrics_en").value.trim();
          const msg = document.getElementById("message_en").value.trim();

          makeMailto({
            to: "hello@rapdm.co",
            subject: `Investment Application - ${company}`,
            body:
`Name: ${name}
Email: ${email}
Company: ${company}
Stage: ${stage}
Metrics: ${metrics}

Summary:
${msg}
`
          });
        });
      }

      // Copyright year
      const y = String(new Date().getFullYear());
      const y1 = document.getElementById("year");
      const y2 = document.getElementById("year2");
      if (y1) y1.textContent = y;
      if (y2) y2.textContent = y;
    </script>
  </body>
