    <script is:inline>
      // Language toggle: show/hide [data-i18n] sections
      const langButtons = document.querySelectorAll("[data-lang]");
      const sections = document.querySelectorAll("[data-i18n]");

      const setLang = (lang) => {
        try { localStorage.setItem("rapdm_lang", lang); } catch {}
        langButtons.forEach((b) => b.setAttribute("aria-pressed", b.dataset.lang === lang ? "true" : "false"));
        sections.forEach((el) => { el.style.display = (el.dataset.i18n === lang) ? "" : "none"; });
        document.documentElement.lang = (lang === "pt") ? "pt-PT" : "en";
      };

      const saved = (() => { try { return localStorage.getItem("rapdm_lang"); } catch { return null; } })() || "pt";
      setLang(saved);
      langButtons.forEach((b) => b.addEventListener("click", () => setLang(b.dataset.lang)));

      // Reveal on scroll
      const io = new IntersectionObserver(
        (entries) => entries.forEach((e) => e.isIntersecting && e.target.classList.add("revealed")),
        { threshold: 0.12 }
      );
      document.querySelectorAll("[data-reveal]").forEach((el) => io.observe(el));

      // Cursor (desktop only)
      const glow = document.getElementById("cursorGlow");
      const dot = document.getElementById("cursorDot");

      const canHover = window.matchMedia && window.matchMedia("(pointer:fine)").matches;
      if (glow && dot && canHover) {
        let gx = 0, gy = 0, dx = 0, dy = 0, tx = 0, ty = 0;
        glow.style.opacity = "1";
        dot.style.opacity = "1";

        const tick = () => {
          gx += (tx - gx) * 0.10;
          gy += (ty - gy) * 0.10;
          dx += (tx - dx) * 0.22;
          dy += (ty - dy) * 0.22;
          glow.style.left = gx + "px";
          glow.style.top = gy + "px";
          dot.style.left = dx + "px";
          dot.style.top = dy + "px";
          requestAnimationFrame(tick);
        };

        window.addEventListener("mousemove", (e) => {
          tx = e.clientX;
          ty = e.clientY;
        }, { passive: true });

        // Hover state
        document.querySelectorAll("a, button, [data-hover]").forEach((el) => {
          el.addEventListener("mouseenter", () => dot.classList.add("active"));
          el.addEventListener("mouseleave", () => dot.classList.remove("active"));
        });

        tick();
      } else {
        if (glow) glow.style.display = "none";
        if (dot) dot.style.display = "none";
      }
    </script>
