        box-shadow: var(--shadow);
        transform: translateY(10px);
        opacity:0;
        transition: opacity .6s ease, transform .7s cubic-bezier(.2,.8,.2,1), border-color .16s ease;
      }
      details.revealed{opacity:1; transform: translateY(0)}
      details:hover{border-color: rgba(11,95,255,.20)}
      summary{
        cursor:pointer;
        font-weight:650;
        color: rgba(10,16,32,.78);
        list-style:none;
      }
      summary::-webkit-details-marker{display:none}
      details p{
        margin: 10px 0 0;
        color: var(--muted);
        font-size:13px;
        line-height:1.6;
      }

      /* Contact */
      .contact{
        margin-top: 14px;
        border:1px solid var(--line);
        background: linear-gradient(180deg, rgba(255,255,255,.92), rgba(255,255,255,.82));
        border-radius: var(--r);
        padding: 18px;
        box-shadow: var(--shadow);
        display:grid;
        grid-template-columns: repeat(12, 1fr);
        gap: 12px;
        position:relative;
        overflow:hidden;
      }
      .contact::before{
        content:"";
        position:absolute;
        inset:-2px;
        background:
          radial-gradient(800px 360px at 18% 0%, rgba(11,95,255,.14), transparent 60%),
          radial-gradient(800px 360px at 86% 10%, rgba(124,58,237,.10), transparent 60%);
        opacity:.75;
        pointer-events:none;
      }
      .contactBox{
        grid-column: span 6;
        border:1px solid rgba(10,16,32,.10);
        background: rgba(255,255,255,.88);
        border-radius: 16px;
        padding: 16px;
        position:relative;
      }
      .contactBox h4{margin:0 0 8px; font-size:14px}
      .contactBox p{margin:0; color: var(--muted); font-size:13px; line-height:1.55}
      .contactActions{
        margin-top: 12px;
        display:flex;
        gap:10px;
        flex-wrap:wrap;
      }

      footer{
        margin-top: 46px;
        padding-top: 18px;
        border-top: 1px solid var(--line);
        display:flex;
        justify-content:space-between;
        align-items:center;
        gap: 12px;
        flex-wrap:wrap;
        color: var(--muted2);
        font-size: 13px;
      }

      /* Entrance animations */
      .fadeup{
        opacity:0;
        transform: translateY(12px);
        transition: opacity .65s ease, transform .8s cubic-bezier(.2,.8,.2,1);
      }
      .fadeup.in{opacity:1; transform: translateY(0)}

      /* Mobile: improve readability and spacing */
      @media (max-width: 980px){
        .hero{padding-top: 42px}
        .lead{font-size:16px}
        .card{grid-column: span 12}
        .venture{grid-column: span 12}
        .signal{grid-column: span 12}
        .two{grid-column: span 12}
        .contactBox{grid-column: span 12}
        .btn{width:100%; justify-content:center}
        .cta{gap:8px}
      }

      @media (prefers-reduced-motion: reduce){
        html{scroll-behavior:auto}
        .blob{animation:none}
        .card,.venture,.signal,details,.fadeup{opacity:1 !important; transform:none !important}
        .cursor{display:none !important}
      }
    </style>
  </head>

  <body>
    <div class="bg-live" aria-hidden="true">
      <div class="blob a"></div>
      <div class="blob b"></div>
      <div class="gridlines"></div>
      <div class="grain"></div>
    </div>

    <div class="cursor" id="cursor" aria-hidden="true"></div>

    <header class="top">
      <div class="topInner">
        <div class="brand">
          <img class="logo" src="/rapdm-logo.png" alt="RAPDM" />
        </div>

        <nav class="nav">
          <a class="pill hoverable" href="#what" data-i18n="nav.what"></a>
          <a class="pill hoverable" href="#thesis" data-i18n="nav.thesis"></a>
          <a class="pill hoverable" href="#focus" data-i18n="nav.focus"></a>
          <a class="pill hoverable" href="#contact" data-i18n="nav.contact"></a>

          <!-- hide on mobile -->
          <a class="pill hoverable" data-hide-mobile="1" href="#playbook" data-i18n="nav.playbook"></a>
          <a class="pill hoverable" data-hide-mobile="1" href="#signals" data-i18n="nav.signals"></a>
          <a class="pill hoverable" data-hide-mobile="1" href="#ventures" data-i18n="nav.ventures"></a>
          <a class="pill hoverable" data-hide-mobile="1" href="#faq" data-i18n="nav.faq"></a>

          <div class="lang hoverable" aria-label="Language">
            <button id="btnPT" class="active" type="button">PT</button>
            <button id="btnEN" type="button">EN</button>
          </div>
        </nav>
      </div>
    </header>

    <main class="wrap">
      <section class="hero">
        <div class="kicker fadeup" data-animate>
          <span class="spark"></span>
          <span data-i18n="badge"></span>
        </div>

        <h1 class="fadeup" data-animate data-i18n="h1"></h1>
        <p class="lead fadeup" data-animate data-i18n="sub"></p>

        <div class="cta fadeup" data-animate>
          <a class="btn primary hoverable" href={`mailto:${email}`}>
            <span data-i18n="ctaPrimary"></span>
            <span class="arrow">→</span>
          </a>
          <a class="btn hoverable" href="#thesis">
            <span data-i18n="ctaSecondary"></span>
            <span class="arrow">→</span>
          </a>
        </div>

        <div class="chips fadeup" data-animate id="chips"></div>
      </section>

      <section id="what">
        <h2 class="sectionTitle">
          <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M5 12h14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <path d="M12 5v14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
          <span data-i18n="sectionWhatTitle"></span>
        </h2>

        <div class="grid" id="pillars"></div>
      </section>

      <section id="thesis">
        <h2 class="sectionTitle">
          <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M12 3l3 7 7 2-7 2-3 7-3-7-7-2 7-2 3-7z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
          </svg>
          <span data-i18n="sectionThesisTitle"></span>
        </h2>
        <div class="grid" id="thesisCards"></div>
      </section>

      <section id="playbook">
        <h2 class="sectionTitle">
          <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M7 4h10v16H7z" stroke="currentColor" stroke-width="2" />
            <path d="M9 8h6M9 12h6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
          <span data-i18n="sectionPlaybookTitle"></span>
        </h2>
        <p class="subText" data-i18n="playbookIntro"></p>
        <div class="grid" id="playbookCards"></div>
      </section>

      <section id="signals">
        <h2 class="sectionTitle">
          <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M4 12l4 4 12-12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
          <span data-i18n="sectionSignalsTitle"></span>
        </h2>
        <p class="subText" data-i18n="signalsIntro"></p>
        <div class="signalList" id="signalsList"></div>
      </section>

      <section id="focus">
        <h2 class="sectionTitle">
          <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M4 6h16M7 12h10M10 18h4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
          <span data-i18n="sectionFocusTitle"></span>
        </h2>

        <p class="subText" data-i18n="focusIntro"></p>

        <div class="grid" id="focusCards"></div>

        <p class="subText" style="margin-top:16px">
          <b data-i18n="notForUs"></b>
        </p>
        <div class="notForUs" id="notForUs"></div>
      </section>

      <section id="ventures">
        <h2 class="sectionTitle">
          <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M7 17l4-10 4 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M5 17h14" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
          <span data-i18n="sectionVenturesTitle"></span>
        </h2>

        <p class="subText" data-i18n="venturesIntro"></p>
        <div class="ventureList" id="venturesList"></div>
      </section>

      <section id="faq">
        <h2 class="sectionTitle">
          <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M12 18h.01" stroke="currentColor" stroke-width="3" stroke-linecap="round"/>
            <path d="M9.5 9.5a2.7 2.7 0 015.2 1c0 2-2.2 2.2-2.2 3.8" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <path d="M4 12a8 8 0 1016 0 8 8 0 10-16 0" stroke="currentColor" stroke-width="2"/>
          </svg>
          <span data-i18n="sectionFaqTitle"></span>
        </h2>

        <div class="faq" id="faqList"></div>
      </section>

      <section id="contact">
        <h2 class="sectionTitle">
          <svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M4 8l8 6 8-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <path d="M4 8v10h16V8" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
          </svg>
          <span data-i18n="sectionContactTitle"></span>
        </h2>

        <div class="contact" data-reveal>
          <div class="contactBox">
            <h4 data-i18n="contactLeftTitle"></h4>
            <p data-i18n="contactLeftText"></p>
            <div class="contactActions">
              <a class="btn primary hoverable" href={`mailto:${email}`}>
                <span data-i18n="contactBtn1"></span>
                <span class="arrow">→</span>
              </a>
            </div>
          </div>

          <div class="contactBox">
            <h4 data-i18n="contactRightTitle"></h4>
            <p data-i18n="contactRightText"></p>
            <div class="contactActions">
              <a class="btn hoverable" href={`mailto:${email}?subject=${encodeURIComponent(deckEmailSubject)}`}>
                <span data-i18n="contactBtn2"></span>
                <span class="arrow">→</span>
              </a>
            </div>
          </div>
        </div>
      </section>

      <footer>
        <div>© {year} RAPDM</div>
        <div data-i18n="footerNote"></div>
      </footer>
    </main>

    <script>
      const CONTENT = JSON.parse(decodeURIComponent("{encodeURIComponent(JSON.stringify(content))}"));

      let lang = "pt";
      const qs = (s) => document.querySelector(s);
      const get = (obj, path) => path.split(".").reduce((a, k) => (a ? a[k] : undefined), obj);

      function escapeHtml(s) {
        return String(s)
          .replaceAll("&", "&amp;")
          .replaceAll("<", "&lt;")
          .replaceAll(">", "&gt;")
          .replaceAll('"', "&quot;")
          .replaceAll("'", "&#039;");
      }

      // Reveal
      let revealIO;
      function setupReveal() {
        if (revealIO) revealIO.disconnect();
        const els = Array.from(document.querySelectorAll("[data-reveal], .signal, details"));
        revealIO = new IntersectionObserver((entries) => {
          for (const e of entries) {
            if (!e.isIntersecting) continue;
            e.target.classList.add("revealed");
            revealIO.unobserve(e.target);
          }
        }, { threshold: 0.15 });
        els.forEach((el) => revealIO.observe(el));
      }

      // Hero entrance
      function animateHero() {
        const hero = Array.from(document.querySelectorAll("[data-animate]"));
        hero.forEach((el, i) => setTimeout(() => el.classList.add("in"), 90 + i * 110));
      }

      // Cursor
      function setupCursor() {
        const cursor = qs("#cursor");
        if (!cursor) return;
        const isTouch = matchMedia("(pointer: coarse)").matches;
        if (isTouch) return;

        let x = 0, y = 0, tx = 0, ty = 0;

        function raf() {
          tx += (x - tx) * 0.18;
          ty += (y - ty) * 0.18;
          cursor.style.transform = `translate3d(${tx}px, ${ty}px, 0) translate3d(-50%, -50%, 0)`;
          requestAnimationFrame(raf);
        }

        window.addEventListener("mousemove", (e) => {
          x = e.clientX; y = e.clientY;
          cursor.classList.add("on");
        }, { passive: true });

        window.addEventListener("mousedown", () => {
          cursor.classList.add("click");
          setTimeout(() => cursor.classList.remove("click"), 140);
        });

        const setBig = (on) => cursor.classList.toggle("big", on);
        document.addEventListener("mouseover", (e) => {
          const t = e.target;
          if (t && (t.closest(".hoverable") || t.closest("a") || t.closest("button") || t.closest("summary"))) setBig(true);
        });
        document.addEventListener("mouseout", () => setBig(false));

        requestAnimationFrame(raf);
      }

      // Icons
      function iconTick(){
        return `<svg width="12" height="12" viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M20 7L10 17l-5-5" stroke="rgba(16,185,129,1)" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>`;
      }
      function iconBuild(){
        return `<svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M3 21h18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          <path d="M7 17V7l5-3 5 3v10" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
          <path d="M10 17v-5h4v5" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
        </svg>`;
      }
      function iconAcquire(){
        return `<svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M4 7h16M4 12h16M4 17h16" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          <path d="M8 7v10" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>`;
      }
      function iconInvest(){
        return `<svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M12 2v20" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          <path d="M17 7c0-2-2-3-5-3S7 5 7 7s2 3 5 3 5 1 5 3-2 3-5 3-5-1-5-3" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
        </svg>`;
      }
      function iconStar(){
        return `<svg class="icon" viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M12 3l3 7 7 2-7 2-3 7-3-7-7-2 7-2 3-7z" stroke="currentColor" stroke-width="2" stroke-linejoin="round"/>
        </svg>`;
      }

      function applyI18n() {
        document.documentElement.lang = lang;

        document.querySelectorAll("[data-i18n]").forEach((el) => {
          const key = el.getAttribute("data-i18n");
          const val = get(CONTENT[lang], key);
          if (typeof val === "string") el.textContent = val;
        });

        // chips
        const chips = qs("#chips");
        chips.innerHTML = "";
        CONTENT[lang].chips.forEach((c) => {
          const d = document.createElement("div");
          d.className = "chip hoverable";
          d.textContent = c;
          chips.appendChild(d);
        });

        // pillars
        const pillars = qs("#pillars");
        pillars.innerHTML = "";
        CONTENT[lang].pillars.forEach((p, idx) => {
          const card = document.createElement("article");
          card.className = "card hoverable";
          card.setAttribute("data-reveal", "true");
          card.style.transitionDelay = (idx * 70) + "ms";
          const icon = idx === 0 ? iconBuild() : idx === 1 ? iconAcquire() : iconInvest();
          card.innerHTML = `
            <h3>${icon}<span>${escapeHtml(p.t)}</span></h3>
            <p>${escapeHtml(p.d)}</p>
            <ul class="bullets">
              ${p.bullets.map(b => `
                <li>
                  <span class="tick">${iconTick()}</span>
                  <span>${escapeHtml(b)}</span>
                </li>`).join("")}
            </ul>
          `;
          pillars.appendChild(card);
        });

        // thesis
        const thesis = qs("#thesisCards");
        thesis.innerHTML = "";
        CONTENT[lang].thesis.forEach((t, idx) => {
          const card = document.createElement("article");
          card.className = "card hoverable";
          card.setAttribute("data-reveal", "true");
          card.style.transitionDelay = (idx * 70) + "ms";
          card.innerHTML = `<h3>${iconStar()}<span>${escapeHtml(t.t)}</span></h3><p>${escapeHtml(t.d)}</p>`;
          thesis.appendChild(card);
        });

        // playbook
        const pb = qs("#playbookCards");
        pb.innerHTML = "";
        CONTENT[lang].playbookPoints.forEach((p, idx) => {
          const card = document.createElement("article");
          card.className = "card hoverable";
          card.setAttribute("data-reveal", "true");
          card.style.transitionDelay = (idx * 70) + "ms";
          card.innerHTML = `<h3>${iconStar()}<span>${escapeHtml(p.t)}</span></h3><p>${escapeHtml(p.d)}</p>`;
          pb.appendChild(card);
        });

        // signals
        const sig = qs("#signalsList");
        sig.innerHTML = "";
        CONTENT[lang].signals.forEach((s, idx) => {
          const el = document.createElement("div");
          el.className = "signal hoverable";
          el.setAttribute("data-reveal", "true");
          el.style.transitionDelay = (idx * 55) + "ms";
          el.innerHTML = `<div class="dotOk"></div><span>${escapeHtml(s)}</span>`;
          sig.appendChild(el);
        });

        // focus
        const focus = qs("#focusCards");
        focus.innerHTML = "";
        CONTENT[lang].focusCards.forEach((f, idx) => {
          const card = document.createElement("article");
          card.className = "card hoverable";
          card.setAttribute("data-reveal", "true");
          card.style.transitionDelay = (idx * 70) + "ms";
          card.innerHTML = `<h3>${iconStar()}<span>${escapeHtml(f.t)}</span></h3><p>${escapeHtml(f.d)}</p>`;
          focus.appendChild(card);
        });

        // not for us
        const not = qs("#notForUs");
        not.innerHTML = "";
        CONTENT[lang].notForUsItems.forEach((t) => {
          const d = document.createElement("div");
          d.className = "tag hoverable";
          d.textContent = t;
          not.appendChild(d);
        });

        // ventures
        const ventures = qs("#venturesList");
        ventures.innerHTML = "";
        CONTENT[lang].ventures.forEach((v, idx) => {
          const el = document.createElement("div");
          el.className = "venture hoverable";
          el.setAttribute("data-reveal", "true");
          el.style.transitionDelay = (idx * 70) + "ms";
          el.innerHTML = `<b>${escapeHtml(v.t)}</b><span>${escapeHtml(v.d)}</span>`;
          ventures.appendChild(el);
        });

        // faq
        const faq = qs("#faqList");
        faq.innerHTML = "";
        CONTENT[lang].faq.forEach((x, idx) => {
          const d = document.createElement("details");
          d.className = "hoverable";
          d.setAttribute("data-reveal", "true");
          d.style.transitionDelay = (idx * 70) + "ms";
          d.innerHTML = `<summary>${escapeHtml(x.q)}</summary><p>${escapeHtml(x.a)}</p>`;
          faq.appendChild(d);
        });

        setupReveal();
      }

      function setupLangToggle() {
        const pt = qs("#btnPT");
        const en = qs("#btnEN");

        const setActive = () => {
          pt.classList.toggle("active", lang === "pt");
          en.classList.toggle("active", lang === "en");
        };

        pt.addEventListener("click", () => { lang = "pt"; setActive(); applyI18n(); });
        en.addEventListener("click", () => { lang = "en"; setActive(); applyI18n(); });

        setActive();
      }

      setupLangToggle();
      applyI18n();
      animateHero();
      setupReveal();
      setupCursor();
    </script>
  </body>
