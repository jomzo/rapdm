---
const year = new Date().getFullYear();

const brand = "RAPDM";
const tagline = "Holding company + venture studio.";
const sub =
  "We build and acquire cash-flowing e-commerce brands, incubate software startups, and invest selectively in exceptional ventures.";

const highlights = [
  { t: "Hold", d: "Own and compound profitable e-commerce brands (e.g., AUDAX)." },
  { t: "Build", d: "Incubate software with operator-led execution (ScalerPath, Chift)." },
  { t: "Invest", d: "Selective, thesis-driven capital where we add leverage." },
];

const focus = [
  "E-commerce brands with durable demand",
  "Operator-first software and tooling",
  "Distribution and systems as the edge",
  "Clean unit economics and compounding",
  "Long-term alignment over hype",
];

const email = "hello@rapdm.co";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{brand} | {tagline}</title>
    <meta name="description" content={`${tagline} ${sub}`} />

    <style>
      :root{
        --bg:#ffffff;
        --panel:#ffffff;
        --line: rgba(17, 24, 39, .10);
        --text:#0b0f19;
        --muted: rgba(17,24,39,.66);
        --muted2: rgba(17,24,39,.50);
        --accent:#0b5fff;
        --shadow: 0 18px 60px rgba(0,0,0,.08);
        --r: 18px;
      }
      *{box-sizing:border-box}
      html{scroll-behavior:smooth}
      body{
        margin:0;
        color:var(--text);
        background:
          radial-gradient(900px 500px at 12% 0%, rgba(11,95,255,.10), transparent 60%),
          radial-gradient(900px 500px at 86% 12%, rgba(0,0,0,.05), transparent 55%),
          var(--bg);
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
        -webkit-font-smoothing: antialiased;
        text-rendering: optimizeLegibility;
      }
      a{color:inherit; text-decoration:none}
      .wrap{max-width:1120px; margin:0 auto; padding:18px 18px 80px}

      .top{
        position:sticky; top:0; z-index:10;
        display:flex; align-items:center; justify-content:space-between; gap:12px;
        padding:12px 0;
        background: rgba(255,255,255,.72);
        backdrop-filter: blur(12px);
        border-bottom: 1px solid rgba(17,24,39,.06);
      }
      .brand{
        display:flex; align-items:center; gap:10px;
        padding:10px 12px; border-radius:999px;
        border:1px solid rgba(17,24,39,.08);
        background: rgba(255,255,255,.9);
      }
      .logo{
        height:18px;
        width:auto;
        display:block;
        filter: saturate(1.05) contrast(1.05);
      }
      .brand b{
        font-size:12px;
        letter-spacing:.22em;
      }

      .nav{display:flex; gap:10px; flex-wrap:wrap; align-items:center}
      .pill{
        font-size:13px;
        color: var(--muted);
        padding:9px 12px;
        border-radius:999px;
        border:1px solid rgba(17,24,39,.10);
        background: rgba(255,255,255,.85);
        transition: transform .16s ease, border-color .16s ease, background .16s ease;
      }
      .pill:hover{
        transform: translateY(-1px);
        border-color: rgba(11,95,255,.28);
        background: rgba(11,95,255,.06);
      }

      .hero{padding:56px 0 18px}
      .kicker{
        display:inline-flex; align-items:center; gap:10px;
        font-size:13px;
        color: var(--muted);
        padding:8px 12px;
        border-radius:999px;
        border:1px solid rgba(17,24,39,.10);
        background: rgba(255,255,255,.9);
      }
      .spark{
        width:7px; height:7px; border-radius:999px;
        background: rgba(11,95,255,.95);
        box-shadow: 0 10px 30px rgba(11,95,255,.22);
      }

      h1{
        margin:16px 0 0;
        font-size: clamp(40px, 5.2vw, 66px);
        line-height: 1.02;
        letter-spacing: -0.03em;
      }
      .lead{
        margin:16px 0 0;
        max-width: 860px;
        color: var(--muted);
        font-size: 18px;
        line-height: 1.7;
      }

      .cta{display:flex; gap:10px; flex-wrap:wrap; margin-top: 26px}
      .btn{
        display:inline-flex; align-items:center; gap:10px;
        padding:12px 14px;
        border-radius: 14px;
        border:1px solid rgba(17,24,39,.12);
        background: rgba(255,255,255,.95);
        font-weight:650;
        transition: transform .16s ease, box-shadow .16s ease, border-color .16s ease, background .16s ease;
      }
      .btn:hover{
        transform: translateY(-1px);
        border-color: rgba(11,95,255,.28);
        box-shadow: 0 16px 50px rgba(0,0,0,.10);
        background: rgba(11,95,255,.04);
      }
      .btn.primary{
        border-color: rgba(11,95,255,.35);
        background: linear-gradient(180deg, rgba(11,95,255,.10), rgba(255,255,255,.95));
      }
      .arrow{opacity:.7; transition: transform .16s ease}
      .btn:hover .arrow{transform: translateX(2px)}

      .grid{display:grid; grid-template-columns: repeat(12, 1fr); gap:12px; margin-top: 30px}
      .card{
        grid-column: span 4;
        border:1px solid rgba(17,24,39,.10);
        background: rgba(255,255,255,.92);
        border-radius: var(--r);
        padding: 18px 18px 16px;
        box-shadow: var(--shadow);
        transform: translateY(10px);
        opacity: 0;
        transition: opacity .55s ease, transform .65s cubic-bezier(.2,.8,.2,1), border-color .16s ease;
      }
      .card.revealed{opacity:1; transform: translateY(0)}
      .card:hover{border-color: rgba(11,95,255,.22)}
      .card h3{margin:0 0 8px; font-size:16px; letter-spacing:-.01em}
      .card p{margin:0; color: var(--muted); font-size:14px; line-height:1.55}
      .card.full{grid-column: span 12}

      .divider{height:1px; background: rgba(17,24,39,.10); margin: 14px 0 14px}

      .list{
        display:grid;
        grid-template-columns: repeat(5, 1fr);
        gap:10px;
        margin-top: 12px;
      }
      .item{
        border:1px solid rgba(17,24,39,.10);
        background: rgba(255,255,255,.92);
        border-radius: 14px;
        padding:12px;
        color: var(--muted);
        font-size:13px;
        line-height:1.5;
        transform: translateY(8px);
        opacity: 0;
        transition: opacity .5s ease, transform .6s cubic-bezier(.2,.8,.2,1);
      }
      .item.revealed{opacity:1; transform: translateY(0)}

      footer{
        margin-top:46px; padding-top:18px;
        border-top:1px solid rgba(17,24,39,.10);
        display:flex; justify-content:space-between; align-items:center;
        gap:12px; flex-wrap:wrap;
        color: var(--muted2); font-size:13px;
      }

      .fadeup{opacity:0; transform: translateY(10px); transition: opacity .6s ease, transform .7s cubic-bezier(.2,.8,.2,1)}
      .fadeup.in{opacity:1; transform: translateY(0)}

      @media (max-width: 900px){
        .hero{padding-top: 34px}
        .card{grid-column: span 12}
        .list{grid-template-columns: 1fr}
        .top{position:relative}
      }
      @media (prefers-reduced-motion: reduce){
        *{transition:none !important; scroll-behavior:auto !important}
        .card,.item,.fadeup{opacity:1 !important; transform:none !important}
      }
    </style>
  </head>

  <body>
    <div class="wrap">
      <header class="top">
        <div class="brand">
          <img class="logo" src="/rapdm-logo.png" alt="RAPDM" />
          <b>{brand}</b>
        </div>
        <nav class="nav">
          <a class="pill" href="#what">What</a>
          <a class="pill" href="#focus">Focus</a>
          <a class="pill" href={`mailto:${email}`}>Contact</a>
        </nav>
      </header>

      <main>
        <section class="hero">
          <div class="kicker fadeup" data-animate>
            <span class="spark"></span>
            <span>Build + Hold + Invest</span>
          </div>

          <h1 class="fadeup" data-animate>{tagline}</h1>
          <p class="lead fadeup" data-animate>{sub}</p>

          <div class="cta fadeup" data-animate>
            <a class="btn primary" href={`mailto:${email}`}>
              {email} <span class="arrow">→</span>
            </a>
            <a class="btn" href="#what">
              Explore <span class="arrow">→</span>
            </a>
          </div>
        </section>

        <section class="grid" id="what">
          {highlights.map((b) => (
            <article class="card" data-reveal>
              <h3>{b.t}</h3>
              <p>{b.d}</p>
            </article>
          ))}

          <article class="card full" id="focus" data-reveal>
            <h3>Focus</h3>
            <div class="divider"></div>
            <p style="margin:0;color:var(--muted);font-size:14px;line-height:1.6;max-width:920px">
              We compound by combining capital, operations, and distribution. We prefer simple structures and high-velocity execution.
            </p>

            <div class="list">
              {focus.map((f, i) => (
                <div class="item" data-item style={`transition-delay:${i * 60}ms`}>{f}</div>
              ))}
            </div>
          </article>
        </section>

        <footer>
          <div>© {year} RAPDM</div>
          <div><a href={`mailto:${email}`}>Contact</a></div>
        </footer>
      </main>
    </div>

    <script>
      const reveal = (selector, cls) => {
        const els = Array.from(document.querySelectorAll(selector));
        if (!els.length) return;
        const io = new IntersectionObserver((entries) => {
          for (const e of entries) {
            if (!e.isIntersecting) continue;
            e.target.classList.add(cls);
            io.unobserve(e.target);
          }
        }, { threshold: 0.15 });
        els.forEach((el) => io.observe(el));
      };

      document.querySelectorAll("[data-animate]").forEach((el, i) => {
        setTimeout(() => el.classList.add("in"), 90 + i * 90);
      });

      reveal("[data-reveal]", "revealed");
      reveal("[data-item]", "revealed");
    </script>
  </body>
</html>
