          <section class="hero">
            <div class="kicker" data-reveal>
              <span class="dot"></span>
              <span data-i18n="hero.kicker">{copy.pt.hero.kicker}</span>
            </div>

            <h1 data-reveal>
              <span data-i18n="hero.titleA">{copy.pt.hero.titleA}</span><br />
              <span class="soft" data-i18n="hero.titleB">{copy.pt.hero.titleB}</span>
            </h1>

            <p class="sub" data-reveal data-i18n="hero.sub">{copy.pt.hero.sub}</p>

            <div class="ctaRow" data-reveal>
              <a class="btn primary hoverable" href={"mailto:" + email}>
                <span class="ic" aria-hidden="true">
                  <svg viewBox="0 0 24 24" fill="none"><path d="M4 6h16v12H4V6z" stroke="currentColor" stroke-width="1.6"/><path d="M4 7l8 6 8-6" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/></svg>
                </span>
                <span data-i18n="hero.cta1">{copy.pt.hero.cta1}</span>
              </a>

              <a class="btn hoverable" href="#thesis">
                <span class="ic" aria-hidden="true">
                  <svg viewBox="0 0 24 24" fill="none"><path d="M6 12h12" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/><path d="M13 7l5 5-5 5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/></svg>
                </span>
                <span data-i18n="hero.cta2">{copy.pt.hero.cta2}</span>
              </a>
            </div>

            <div class="badges" data-reveal>
              {copy.pt.hero.badges.map((b) => <span class="badge" data-i18n-array="hero.badges">{b}</span>)}
            </div>
          </section>

          <!-- WHAT -->
          <section id="work">
            <div class="sectionTitle" data-reveal>
              <h2 data-i18n="blocks.what.title">{copy.pt.blocks.what.title}</h2>
              <p>RAPDM</p>
            </div>

            <div class="grid3">
              {copy.pt.blocks.what.cards.map((c) => (
                <article class="card" data-reveal>
                  <div class="cardTop">
                    <div class="iconPill" aria-hidden="true">
                      {c.icon === "hex" ? (
                        <svg viewBox="0 0 24 24" fill="none">
                          <path d="M7.5 4.8 12 2.2l4.5 2.6L21 9.4v5.2l-4.5 2.6L12 19.8l-4.5-2.6L3 14.6V9.4l4.5-4.6z"
                            stroke="currentColor" stroke-width="1.4" />
                        </svg>
                      ) : c.icon === "spark" ? (
                        <svg viewBox="0 0 24 24" fill="none">
                          <path d="M12 2l2.4 6.2L21 12l-6.6 2.8L12 21l-2.4-6.2L3 12l6.6-2.8L12 2z"
                            stroke="currentColor" stroke-width="1.4" stroke-linejoin="round"/>
                        </svg>
                      ) : (
                        <svg viewBox="0 0 24 24" fill="none">
                          <path d="M5 12h14" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/>
                          <path d="M13 6l6 6-6 6" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      )}
                    </div>

                    <div>
                      <h3 data-i18n="card.title">{c.title}</h3>
                      <p data-i18n="card.desc">{c.desc}</p>
                    </div>
                  </div>
                </article>
              ))}
            </div>
          </section>

          <!-- PLATFORM -->
          <section id="platform">
            <div class="sectionTitle" data-reveal>
              <h2 data-i18n="blocks.platform.title">{copy.pt.blocks.platform.title}</h2>
              <p>Operator-first</p>
            </div>

            <div class="list">
              {copy.pt.blocks.platform.points.map((p) => (
                <div class="listItem" data-reveal>
                  <div class="bullet" aria-hidden="true">
                    <svg viewBox="0 0 24 24" fill="none">
                      <path d="M20 7L10 17l-5-5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                  </div>
                  <div>
                    <h3 style="margin:0 0 6px; font-size:14px; letter-spacing:-0.01em;" data-i18n="point.title">{p.title}</h3>
                    <p style="margin:0; color:var(--muted); font-size:13px; line-height:1.55;" data-i18n="point.desc">{p.desc}</p>
                  </div>
                </div>
              ))}
            </div>
          </section>

          <!-- THESIS -->
          <section id="thesis">
            <div class="sectionTitle" data-reveal>
              <h2 data-i18n="blocks.thesis.title">{copy.pt.blocks.thesis.title}</h2>
              <p>Focus</p>
            </div>

            <div class="card" data-reveal>
              <p style="margin:0; color:var(--muted); font-size:14px; line-height:1.6;" data-i18n="blocks.thesis.lead">
                {copy.pt.blocks.thesis.lead}
              </p>
              <div class="tags">
                {copy.pt.blocks.thesis.tags.map((t) => (
                  <span class="tag" data-i18n-array="blocks.thesis.tags">{t}</span>
                ))}
              </div>
            </div>
          </section>

          <!-- VENTURES -->
          <section id="ventures">
            <div class="sectionTitle" data-reveal>
              <h2 data-i18n="blocks.ventures.title">{copy.pt.blocks.ventures.title}</h2>
              <p>Build + Invest</p>
            </div>

            <div class="grid2">
              <div class="card" data-reveal>
                <p style="margin:0 0 12px; color:var(--muted); font-size:14px; line-height:1.6;" data-i18n="blocks.ventures.lead">
                  {copy.pt.blocks.ventures.lead}
                </p>
                <div class="list" style="gap:10px;">
                  {copy.pt.blocks.ventures.items.map((v) => (
                    <div class="listItem" data-reveal style="margin:0;">
                      <div class="bullet" aria-hidden="true">
                        <svg viewBox="0 0 24 24" fill="none">
                          <path d="M12 2v20" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/>
                          <path d="M2 12h20" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/>
                        </svg>
                      </div>
                      <div>
                        <h3 style="margin:0 0 4px; font-size:14px;" data-i18n="venture.name">{v.name}</h3>
                        <p style="margin:0; color:var(--muted); font-size:13px;" data-i18n="venture.desc">{v.desc}</p>
                      </div>
                    </div>
                  ))}
                </div>
              </div>

              <div class="card" data-reveal>
                <h3 style="margin:0 0 8px; font-size:14px;">Signal</h3>
                <p style="margin:0; color:var(--muted); font-size:13px; line-height:1.55;">
                  • Founders com execução<br/>
                  • Unit economics saudáveis<br/>
                  • Distribuição como moat<br/>
                  • Dados como vantagem<br/>
                </p>
                <div style="height:12px;"></div>
                <p style="margin:0; color:var(--muted); font-size:13px; line-height:1.55;" data-i18n="blocks.ventures.note">
                  {copy.pt.blocks.ventures.note}
                </p>
              </div>
            </div>
          </section>

          <!-- CONTACT -->
          <section id="contact">
            <div class="sectionTitle" data-reveal>
              <h2 data-i18n="blocks.contact.title">{copy.pt.blocks.contact.title}</h2>
              <p>Direct</p>
            </div>

            <div class="card contactCard" data-reveal>
              <div>
                <p style="margin:0 0 12px; color:var(--muted); font-size:14px; line-height:1.6;" data-i18n="blocks.contact.lead">
                  {copy.pt.blocks.contact.lead}
                </p>

                <div style="display:flex; align-items:center; gap:10px; flex-wrap:wrap;">
                  <span class="mono"><span data-i18n="blocks.contact.emailLabel">{copy.pt.blocks.contact.emailLabel}</span>: {email}</span>
                </div>
              </div>

              <div class="contactRight">
                <a class="btn primary hoverable" href={"mailto:" + email}>
                  <span class="ic" aria-hidden="true">
                    <svg viewBox="0 0 24 24" fill="none"><path d="M4 6h16v12H4V6z" stroke="currentColor" stroke-width="1.6"/><path d="M4 7l8 6 8-6" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/></svg>
                  </span>
                  <span data-i18n="blocks.contact.cta">{copy.pt.blocks.contact.cta}</span>
                </a>
              </div>
            </div>

            <footer data-reveal>
              <span data-i18n="blocks.contact.footer">{copy.pt.blocks.contact.footer}</span>
            </footer>
          </section>
        </div>
      </main>
    </div>

    <script>
      // Data
      const COPY = /** @type {any} */ ({JSON.stringify(copy)});

      // Language state
      const btnPT = document.getElementById("btnPT");
      const btnEN = document.getElementById("btnEN");

      function setActive(lang){
        btnPT.classList.toggle("active", lang === "pt");
        btnEN.classList.toggle("active", lang === "en");

        // Title
        document.title = COPY[lang].meta.title;

        // Replace simple keys
        document.querySelectorAll("[data-i18n]").forEach(el => {
          const key = el.getAttribute("data-i18n");
          const val = key.split(".").reduce((acc, k) => (acc ? acc[k] : undefined), COPY[lang]);
          if (typeof val === "string") el.textContent = val;
        });

        // Badges array (hero)
        const badges = COPY[lang].hero.badges;
        const badgeEls = document.querySelectorAll('[data-i18n-array="hero.badges"]');
        badgeEls.forEach((el, i) => { if (badges[i]) el.textContent = badges[i]; });

        // Thesis tags array
        const tags = COPY[lang].blocks.thesis.tags;
        const tagEls = document.querySelectorAll('[data-i18n-array="blocks.thesis.tags"]');
        tagEls.forEach((el, i) => { if (tags[i]) el.textContent = tags[i]; });

        // Card blocks mapping by order
        const cards = COPY[lang].blocks.what.cards;
        const cardTitles = document.querySelectorAll('[data-i18n="card.title"]');
        const cardDescs = document.querySelectorAll('[data-i18n="card.desc"]');
        cardTitles.forEach((el, i) => { if (cards[i]) el.textContent = cards[i].title; });
        cardDescs.forEach((el, i) => { if (cards[i]) el.textContent = cards[i].desc; });

        // Platform points
        const points = COPY[lang].blocks.platform.points;
        const pt = document.querySelectorAll('[data-i18n="point.title"]');
        const pd = document.querySelectorAll('[data-i18n="point.desc"]');
        pt.forEach((el, i) => { if (points[i]) el.textContent = points[i].title; });
        pd.forEach((el, i) => { if (points[i]) el.textContent = points[i].desc; });

        // Ventures items
        const ventures = COPY[lang].blocks.ventures.items;
        const vn = document.querySelectorAll('[data-i18n="venture.name"]');
        const vd = document.querySelectorAll('[data-i18n="venture.desc"]');
        vn.forEach((el, i) => { if (ventures[i]) el.textContent = ventures[i].name; });
        vd.forEach((el, i) => { if (ventures[i]) el.textContent = ventures[i].desc; });

        // Persist
        localStorage.setItem("rapdm_lang", lang);
        document.documentElement.lang = lang === "pt" ? "pt" : "en";
      }

      const initial = (localStorage.getItem("rapdm_lang") === "en") ? "en" : "pt";
      setActive(initial);

      btnPT.addEventListener("click", () => setActive("pt"));
      btnEN.addEventListener("click", () => setActive("en"));

      // Reveal on scroll
      const els = Array.from(document.querySelectorAll("[data-reveal]"));
      const io = new IntersectionObserver((entries) => {
        for (const e of entries){
          if (e.isIntersecting){
            e.target.classList.add("in");
            io.unobserve(e.target);
          }
        }
      }, { threshold: 0.12 });
      els.forEach(el => io.observe(el));

      // Cursor glow (desktop only)
      const glow = document.getElementById("cursorGlow");
      let raf = 0;
      let mx = 0, my = 0;
      window.addEventListener("mousemove", (ev) => {
        mx = ev.clientX; my = ev.clientY;
        glow.style.opacity = "1";
        if (!raf){
          raf = requestAnimationFrame(() => {
            glow.style.left = mx + "px";
            glow.style.top = my + "px";
            raf = 0;
          });
        }
      }, { passive: true });

      window.addEventListener("mouseleave", () => {
        glow.style.opacity = "0";
      });

      // Fancy hover scale on "hoverable"
      document.querySelectorAll(".hoverable").forEach(el => {
        el.addEventListener("pointerenter", () => {
          glow.style.opacity = "1";
        });
      });
    </script>
  </body>
