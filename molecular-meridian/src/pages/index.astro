---
const SITE_TITLE = "RAPDM | Holding Company + Venture Studio";
const EMAIL = "hello@rapdm.co";

/**
 * 1) Cria um Appointment Schedule no Google Calendar:
 *    Google Calendar -> Appointment schedules -> Create
 * 2) Copia o link público e cola aqui:
 */
const MEETING_URL = ""; // ex: "https://calendar.google.com/calendar/appointments/schedules/...."

const NEWS = [
  {
    date: "Dez 2025",
    title: "RAPDM online",
    note: "Lançamento do site e onboarding do pipeline de investimento.",
    tag: "Update",
  },
  {
    date: "Q1 2026",
    title: "Tese e foco de investimento",
    note: "Publicação do memo de tese e critérios de seleção.",
    tag: "Thesis",
  },
  {
    date: "2026",
    title: "Operações e tooling",
    note: "Reforço de sistemas internos e automação operator-first.",
    tag: "Ops",
  },
];
---

<!doctype html>
<html lang="pt-PT">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="RAPDM. Holding company e venture studio. Construímos, operamos e investimos." />
    <meta name="theme-color" content="#0B5CFF" />

    <title>{SITE_TITLE}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preload" as="image" href="/rapdm-logo.png" />

    <style>
      :root{
        /* Executive clean palette */
        --bg: #f7f8fb;
        --surface: rgba(255,255,255,.78);
        --surface2: rgba(255,255,255,.64);
        --text: #0b1220;
        --muted: rgba(11,18,32,.62);
        --muted2: rgba(11,18,32,.46);
        --line: rgba(11,18,32,.10);

        --accent: #0B5CFF;
        --accent2: #3B82F6;
        --accent3: #06B6D4;

        --shadow: 0 10px 28px rgba(15,23,42,.10);
        --shadow2: 0 18px 60px rgba(15,23,42,.14);
        --r: 18px;
        --r2: 24px;
        --max: 1140px;

        --ease: cubic-bezier(.2,.8,.2,1);
      }

      *{ box-sizing:border-box; }
      html,body{ height:100%; }
      body{
        margin:0;
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Inter, Arial, "Apple Color Emoji","Segoe UI Emoji";
        color: var(--text);
        background: var(--bg);
        overflow-x:hidden;
      }

      /* Background */
      .bg{
        position: fixed;
        inset: 0;
        pointer-events:none;
        z-index: 0;
      }

      /* Animated top field: subtle, not nightclub */
      .topField{
        position:absolute;
        top:-320px;
        left:50%;
        width: 1200px;
        height: 620px;
        transform: translateX(-50%);
        filter: blur(24px);
        opacity:.95;
        background:
          radial-gradient(closest-side, rgba(11,92,255,.20), transparent 70%),
          radial-gradient(closest-side, rgba(59,130,246,.14), transparent 72%),
          radial-gradient(closest-side, rgba(6,182,212,.10), transparent 74%);
        animation: topPulse 9s var(--ease) infinite;
      }
      @keyframes topPulse{
        0%,100%{ transform: translateX(-50%) scale(1); opacity:.90; filter: blur(24px) hue-rotate(0deg); }
        50%{ transform: translateX(-50%) scale(1.05); opacity:1; filter: blur(22px) hue-rotate(16deg); }
      }

      .mesh{
        position:absolute;
        inset:-20%;
        background:
          radial-gradient(900px 700px at 20% 18%, rgba(11,92,255,.14), transparent 60%),
          radial-gradient(900px 700px at 85% 18%, rgba(6,182,212,.10), transparent 60%),
          radial-gradient(900px 700px at 70% 80%, rgba(59,130,246,.10), transparent 60%),
          radial-gradient(900px 900px at 50% 50%, rgba(255,255,255,.62), transparent 62%);
        filter: blur(12px);
        animation: drift 16s var(--ease) infinite;
        opacity:.9;
      }
      @keyframes drift{
        0%{ transform: translate3d(0,0,0) scale(1); }
        50%{ transform: translate3d(2.0%, -1.2%, 0) scale(1.02); }
        100%{ transform: translate3d(0,0,0) scale(1); }
      }

      .grid{
        position:absolute;
        inset:0;
        background-image:
          linear-gradient(to right, rgba(11,18,32,.06) 1px, transparent 1px),
          linear-gradient(to bottom, rgba(11,18,32,.06) 1px, transparent 1px);
        background-size: 68px 68px;
        opacity:.40;
        mask-image: radial-gradient(62% 54% at 50% 24%, rgba(0,0,0,1), transparent 70%);
      }

      /* Minimal cursor ring (desktop only) */
      .cursorRing{
        position: fixed;
        width: 26px;
        height: 26px;
        border-radius: 999px;
        pointer-events:none;
        z-index: 4;
        border: 1px solid rgba(11,92,255,.35);
        background: rgba(11,92,255,.04);
        transform: translate(-50%,-50%);
        opacity:0;
        transition: opacity .18s var(--ease), transform .18s var(--ease);
        backdrop-filter: blur(6px);
      }
      .cursorRing.active{
        transform: translate(-50%,-50%) scale(1.25);
        border-color: rgba(11,92,255,.55);
        background: rgba(11,92,255,.06);
      }
      @media (hover:none){
        .cursorRing{ display:none; }
      }

      .wrap{ position:relative; z-index:1; min-height:100%; }
      .container{ width: min(var(--max), calc(100% - 48px)); margin: 0 auto; }
      @media (max-width: 640px){
        .container{ width: calc(100% - 28px); }
      }

      header{
        position: sticky;
        top: 0;
        z-index: 10;
        backdrop-filter: blur(14px);
        background: rgba(247,248,251,.74);
        border-bottom: 1px solid rgba(11,18,32,.06);
      }
      .nav{
        display:flex;
        align-items:center;
        justify-content:space-between;
        height:76px;
        gap:14px;
      }
      .brand{
        display:flex;
        align-items:center;
        text-decoration:none;
        color:inherit;
      }
      .brand img{
        height: 34px; /* bigger */
        width:auto;
        display:block;
        filter: drop-shadow(0 10px 18px rgba(15,23,42,.10));
      }

      .navLinks{
        display:flex;
        gap:12px;
        align-items:center;
      }
      .navLinks a{
        text-decoration:none;
        color: rgba(11,18,32,.72);
        font-size: 13px;
        padding: 10px 10px;
        border-radius: 999px;
        transition: background .2s var(--ease), color .2s var(--ease), transform .2s var(--ease);
      }
      .navLinks a:hover{
        background: rgba(11,92,255,.08);
        color: rgba(11,18,32,.92);
        transform: translateY(-1px);
      }

      .right{
        display:flex;
        align-items:center;
        gap:10px;
      }
      .lang{
        display:flex;
        align-items:center;
        border: 1px solid rgba(11,18,32,.10);
        border-radius: 999px;
        overflow:hidden;
        background: var(--surface2);
      }
      .lang button{
        border:0;
        background:transparent;
        padding: 10px 12px;
        font-size: 12px;
        cursor:pointer;
        color: rgba(11,18,32,.70);
        transition: background .2s var(--ease), color .2s var(--ease);
      }
      .lang button[aria-pressed="true"]{
        background: rgba(11,92,255,.10);
        color: rgba(11,92,255,1);
        font-weight:700;
      }

      .btn{
        display:inline-flex;
        align-items:center;
        gap:10px;
        border-radius: 999px;
        padding: 12px 14px;
        font-size: 13px;
        text-decoration:none;
        cursor:pointer;
        border: 1px solid rgba(11,18,32,.10);
        background: var(--surface);
        color: rgba(11,18,32,.86);
        box-shadow: var(--shadow);
        transition: transform .2s var(--ease), box-shadow .2s var(--ease), background .2s var(--ease), border-color .2s var(--ease);
        white-space:nowrap;
      }
      .btn:hover{ transform: translateY(-2px); box-shadow: var(--shadow2); }
      .btn.primary{
        background: linear-gradient(180deg, rgba(11,92,255,.98), rgba(11,92,255,.82));
        border-color: rgba(11,92,255,.38);
        color: #fff;
      }
      .btn.primary:hover{
        background: linear-gradient(180deg, rgba(11,92,255,1), rgba(59,130,246,.92));
      }
      .btn.ghost{
        background: rgba(255,255,255,.55);
      }
      .btn .ic{ width:16px; height:16px; display:inline-block; }

      main{ padding: 34px 0 92px; }
      @media (max-width: 980px){
        .navLinks{ display:none; }
        main{ padding-top: 22px; }
      }

      /* Sections / cards */
      section{ padding: 30px 0; }
      .hero{ padding: 34px 0 12px; }

      .kicker{
        display:inline-flex;
        align-items:center;
        gap:10px;
        padding: 8px 12px;
        border: 1px solid rgba(11,18,32,.10);
        background: var(--surface2);
        border-radius: 999px;
        font-size:12px;
        color: rgba(11,18,32,.72);
        box-shadow: var(--shadow);
      }
      .dot{
        width: 8px; height: 8px; border-radius:999px;
        background: linear-gradient(180deg, var(--accent), var(--accent3));
        box-shadow: 0 10px 22px rgba(11,92,255,.18);
      }

      h1{
        margin: 18px 0 10px;
        font-size: clamp(34px, 5.4vw, 60px);
        line-height: 1.02;
        letter-spacing: -0.03em;
      }
      .sub{
        max-width: 860px;
        font-size: 16px;
        line-height: 1.6;
        color: var(--muted);
        margin: 0 0 18px;
      }

      .badges{
        display:flex;
        gap:10px;
        flex-wrap:wrap;
        margin-top: 16px;
      }
      .badge{
        font-size: 12px;
        padding: 8px 10px;
        border-radius: 999px;
        border: 1px solid rgba(11,18,32,.10);
        background: var(--surface2);
        color: rgba(11,18,32,.70);
      }

      .sectionTitle{
        display:flex;
        align-items:baseline;
        justify-content:space-between;
        gap:14px;
        margin-bottom: 12px;
      }
      .sectionTitle h2{
        margin:0;
        font-size: 18px;
        letter-spacing: -0.02em;
      }
      .sectionTitle p{
        margin:0;
        color: var(--muted2);
        font-size: 13px;
      }

      .grid3{
        display:grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 14px;
      }
      .grid2{
        display:grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 14px;
      }
      @media (max-width: 980px){
        .grid3{ grid-template-columns: 1fr; }
        .grid2{ grid-template-columns: 1fr; }
      }

      .card{
        border: 1px solid rgba(11,18,32,.10);
        background: var(--surface);
        border-radius: var(--r2);
        padding: 18px;
        box-shadow: var(--shadow);
        position: relative;
        overflow:hidden;
        transition: transform .22s var(--ease), box-shadow .22s var(--ease), border-color .22s var(--ease);
      }
      .card:hover{
        transform: translateY(-3px);
        box-shadow: var(--shadow2);
        border-color: rgba(11,92,255,.20);
      }

      .cardTop{
        display:flex;
        align-items:flex-start;
        gap: 12px;
        margin-bottom: 10px;
      }
      .iconPill{
        width: 38px;
        height: 38px;
        border-radius: 14px;
        background: linear-gradient(180deg, rgba(11,92,255,.12), rgba(6,182,212,.08));
        border: 1px solid rgba(11,92,255,.14);
        display:grid;
        place-items:center;
        flex: 0 0 auto;
      }
      .iconPill svg{ width: 18px; height: 18px; }

      .card h3{
        margin:0;
        font-size: 14px;
        letter-spacing: -0.01em;
      }
      .card p{
        margin:0;
        color: var(--muted);
        font-size: 13px;
        line-height: 1.55;
      }

      .list{
        display:flex;
        flex-direction:column;
        gap: 10px;
      }
      .listItem{
        display:flex;
        align-items:flex-start;
        gap: 12px;
        border: 1px solid rgba(11,18,32,.10);
        background: var(--surface);
        border-radius: var(--r);
        padding: 14px;
        box-shadow: var(--shadow);
        transition: transform .18s var(--ease), box-shadow .18s var(--ease);
      }
      .listItem:hover{ transform: translateY(-2px); box-shadow: var(--shadow2); }

      .bullet{
        width: 26px; height: 26px;
        border-radius: 10px;
        background: rgba(11,92,255,.08);
        border: 1px solid rgba(11,92,255,.14);
        display:grid; place-items:center;
        flex: 0 0 auto;
      }
      .bullet svg{ width: 14px; height: 14px; }

      .tags{
        display:flex;
        flex-wrap:wrap;
        gap: 10px;
        margin-top: 12px;
      }
      .tag{
        font-size: 12px;
        padding: 8px 10px;
        border-radius: 999px;
        border: 1px solid rgba(11,18,32,.10);
        background: var(--surface2);
        color: rgba(11,18,32,.68);
      }

      /* Forms */
      form{
        display:grid;
        gap: 10px;
      }
      .row2{
        display:grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
      }
      @media (max-width: 720px){
        .row2{ grid-template-columns: 1fr; }
      }
      label{
        font-size: 12px;
        color: rgba(11,18,32,.62);
        display:block;
        margin: 0 0 6px;
      }
      input, textarea, select{
        width:100%;
        border-radius: 14px;
        border: 1px solid rgba(11,18,32,.12);
        background: rgba(255,255,255,.82);
        padding: 12px 12px;
        font-size: 13px;
        color: rgba(11,18,32,.90);
        outline:none;
        transition: border-color .2s var(--ease), box-shadow .2s var(--ease);
      }
      textarea{ min-height: 120px; resize: vertical; }
      input:focus, textarea:focus, select:focus{
        border-color: rgba(11,92,255,.36);
        box-shadow: 0 0 0 4px rgba(11,92,255,.10);
      }
      .formHint{
        font-size: 12px;
        color: rgba(11,18,32,.52);
        line-height:1.5;
      }

      /* News */
      .newsGrid{
        display:grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 14px;
      }
      @media (max-width: 980px){
        .newsGrid{ grid-template-columns: 1fr; }
      }
      .newsTag{
        display:inline-flex;
        align-items:center;
        gap:8px;
        font-size: 11px;
        padding: 6px 10px;
        border-radius: 999px;
        border: 1px solid rgba(11,18,32,.10);
        background: rgba(255,255,255,.62);
        color: rgba(11,18,32,.70);
        margin-bottom: 10px;
      }

      /* Reveal */
      [data-reveal]{
        opacity: 0;
        transform: translateY(10px);
        transition: opacity .62s var(--ease), transform .62s var(--ease);
        will-change: opacity, transform;
      }
      .revealed{
        opacity: 1;
        transform: translateY(0);
      }

      /* Language blocks */
      [data-i18n="en"]{ display:none; }

      footer{
        padding: 18px 0 0;
        color: rgba(11,18,32,.52);
        font-size: 12px;
      }

      .footRow{
        display:flex;
        justify-content:space-between;
        align-items:center;
        gap: 12px;
        flex-wrap:wrap;
        border-top: 1px solid rgba(11,18,32,.08);
        padding-top: 14px;
        margin-top: 18px;
      }
      .mono{
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
      }
    </style>
  </head>

  <body>
    <div class="bg" aria-hidden="true">
      <div class="topField"></div>
      <div class="mesh"></div>
      <div class="grid"></div>
    </div>

    <div class="cursorRing" id="cursorRing" aria-hidden="true"></div>

    <div class="wrap">
      <header>
        <div class="container">
          <div class="nav">
            <a class="brand" href="#top" data-hover>
              <img src="/rapdm-logo.png" alt="RAPDM" />
            </a>

            <div class="navLinks" aria-label="Navigation">
              <a href="#work" data-hover>Focus</a>
              <a href="#process" data-hover>Process</a>
              <a href="#news" data-hover>News</a>
              <a href="#apply" data-hover>Apply</a>
              <a href="#careers" data-hover>Careers</a>
              <a href="#contact" data-hover>Contact</a>
            </div>

            <div class="right">
              {MEETING_URL ? (
                <a class="btn primary" href={MEETING_URL} target="_blank" rel="noreferrer" data-hover>
                  <span class="ic" aria-hidden="true">
                    <svg viewBox="0 0 24 24" fill="none"><path d="M7 3v3" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/><path d="M17 3v3" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/><path d="M4.5 8h15" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/><path d="M6 6h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2z" stroke="currentColor" stroke-width="1.6"/></svg>
                  </span>
                  <span>Marcar reunião</span>
                </a>
              ) : (
                <a class="btn primary" href={`mailto:${EMAIL}?subject=Reuni%C3%A3o%20-%20RAPDM`} data-hover>
                  <span class="ic" aria-hidden="true">
                    <svg viewBox="0 0 24 24" fill="none"><path d="M4 6h16v12H4V6z" stroke="currentColor" stroke-width="1.6"/><path d="M4 7l8 6 8-6" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/></svg>
                  </span>
                  <span>Marcar reunião</span>
                </a>
              )}

              <div class="lang" role="tablist" aria-label="Language">
                <button type="button" data-lang="pt" aria-pressed="true">PT</button>
                <button type="button" data-lang="en" aria-pressed="false">EN</button>
              </div>
            </div>
          </div>
        </div>
      </header>

      <main id="top">
        <div class="container">

          <!-- HERO PT -->
          <section class="hero" data-i18n="pt">
            <div class="kicker" data-reveal>
              <span class="dot"></span>
              <span>Holding company + venture studio</span>
            </div>

            <h1 data-reveal>
              Construímos, operamos<br />
              e investimos com convicção.
            </h1>

            <p class="sub" data-reveal>
              RAPDM é uma holding focada em ativos com potencial de escala, qualidade de execução
              e vantagens estruturais na distribuição. Quando faz sentido, incubamos e aceleramos.
            </p>

            <div style="display:flex; gap:12px; flex-wrap:wrap; align-items:center; margin-top: 14px;" data-reveal>
              <a class="btn primary" href="#apply" data-hover>
                <span class="ic" aria-hidden="true">
                  <svg viewBox="0 0 24 24" fill="none"><path d="M6 12h12" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/><path d="M13 7l5 5-5 5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/></svg>
                </span>
                <span>Aplicar para investimento</span>
              </a>

              <a class="btn ghost" href={`mailto:${EMAIL}`} data-hover>
                <span class="ic" aria-hidden="true">
                  <svg viewBox="0 0 24 24" fill="none"><path d="M4 6h16v12H4V6z" stroke="currentColor" stroke-width="1.6"/><path d="M4 7l8 6 8-6" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/></svg>
                </span>
                <span>{EMAIL}</span>
              </a>
            </div>

            <div class="badges" data-reveal>
              <span class="badge">Consumer</span>
              <span class="badge">E-commerce infra</span>
              <span class="badge">Operator-first</span>
              <span class="badge">Long-term</span>
            </div>
          </section>

          <!-- HERO EN -->
          <section class="hero" data-i18n="en">
            <div class="kicker" data-reveal>
              <span class="dot"></span>
              <span>Holding company + venture studio</span>
            </div>

            <h1 data-reveal>
              We build, operate<br />
              and invest with conviction.
            </h1>

            <p class="sub" data-reveal>
              RAPDM is a holding focused on scalable assets, execution quality,
              and structural distribution advantages. When it makes sense, we incubate and accelerate.
            </p>

            <div style="display:flex; gap:12px; flex-wrap:wrap; align-items:center; margin-top: 14px;" data-reveal>
              <a class="btn primary" href="#apply" data-hover>
                <span class="ic" aria-hidden="true">
                  <svg viewBox="0 0 24 24" fill="none"><path d="M6 12h12" stroke="currentColor" stroke-width="1.8" stroke-linecap="round"/><path d="M13 7l5 5-5 5" stroke="currentColor" stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round"/></svg>
                </span>
                <span>Apply for investment</span>
              </a>

              <a class="btn ghost" href={`mailto:${EMAIL}`} data-hover>
                <span class="ic" aria-hidden="true">
                  <svg viewBox="0 0 24 24" fill="none"><path d="M4 6h16v12H4V6z" stroke="currentColor" stroke-width="1.6"/><path d="M4 7l8 6 8-6" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/></svg>
                </span>
                <span>{EMAIL}</span>
              </a>
            </div>

            <div class="badges" data-reveal>
              <span class="badge">Consumer</span>
              <span class="badge">E-commerce infra</span>
              <span class="badge">Operator-first</span>
              <span class="badge">Long-term</span>
            </div>
          </section>

          <!-- FOCUS -->
          <section id="work" data-i18n="pt">
            <div class="sectionTitle" data-reveal>
              <h2>Focus</h2>
              <p>O que fazemos</p>
            </div>

            <div class="grid3">
              <article class="card" data-reveal data-hover>
                <div class="cardTop">
                  <div class="iconPill" aria-hidden="true">
                    <svg viewBox="0 0 24 24" fill="none">
                      <path d="M7.5 4.8 12 2.2l4.5 2.6L21 9.4v5.2l-4.5 2.6L12 19.8l-4.5-2.6L3 14.6V9.4l4.5-4.6z" stroke="currentColor" stroke-width="1.4"/>
                    </svg>
                  </div>
                  <div>
                    <h3>Holding</h3>
                    <p>Estrutura, governação e capital allocation. Construção de longo prazo com disciplina.</p>
                  </div>
                </div>
              </article>

              <article class="card" data-reveal data-hover>
                <div class="cardTop">
